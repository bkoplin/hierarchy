{
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "esnext",
    "module": "commonjs",
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noStrictGenericChecks": true,
    "noImplicitThis": true,
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "types": [
      "vitest/globals",
      "vitest/importMeta"
    ]
  },
  "exclude": ["./dist"]
}