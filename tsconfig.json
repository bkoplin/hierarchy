{
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "esnext",
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "noEmit": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitThis": true,
    "types": [
      "vitest/globals",
      "vitest/importMeta"
    ]
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./*.config.ts", "./.eslintrc.cjs"],
  "exclude": ["./dist"]
}